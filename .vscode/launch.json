{
    "version": "0.2.0",
    "configurations": [        
        { 
            "name": "(gdb) Attach",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceRoot}/examples/vsum2",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb"
        },
        {
            "name": "Debug vsum",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/examples/vsum",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceRoot}/examples",
            "environment": [],
            "externalConsole": true,
            "linux": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            }
        }
    ]
}